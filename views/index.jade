doctype html
html
    head
        title Coucou
        link(rel="stylesheet", type="text/css", href="index.css")
    body
        h1 Gestion de la lumière !
        fieldset
            legend Statut
            #status
            #error
        fieldset
            legend Aléatoire
            button.btn.btn-primary#playRandom Couleurs aléatoires
        fieldset
            legend Couleur unie
            input#color(type='color') couleur
            button.btn.btn-primary#applyColor Envoyer cette couleur
        fieldset
            legend Fichiers
            #availableFiles
        fieldset
            legend Ports
            #availablePorts

        fieldset
            legend Envoi de fichier vidéo
            | fichier vidéo :
            input#file(type='file')
            | ou url :
            input#url(type='url') url
            button.btn.btn-primary#sendFileOrUrl Envoyer

        script(src="index.js")
